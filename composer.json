{
    "name": "phossa2/event",
    "type": "library",
    "description": "Event manager implementation libraray for PHP",
    "keywords": [
        "event",
        "event manager",
        "phossa",
        "phossa2"
    ],
    "homepage": "https://github.com/bbatsche/event",
    "license": "MIT",
    "authors": [
        {
            "name": "Hong Zhang",
            "homepage": "https://github.com/phossa2"
        },
        {
            "name": "Ben Batschelet",
            "email": "ben.batschelet@gmail.com",
            "homepage": "https://github.com/bbatsche"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0 || ^8.0",
        "slevomat/coding-standard": "^5.0",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.1-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Phossa2\\Event\\": "src"
        }
    },
    "archive": {
        "exclude": [
            "!vendor",
            "tests",
            "composer.lock"
        ]
    },
    "scripts": {
        "check": "phpcs --standard=psr2 src/",
        "format": "phpcbf --standard=psr2 src/",
        "test": "phpunit"
    }
}
