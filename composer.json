{
    "name": "phossa2/event",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/phossa2/event",
    "description": "PSR-14 event manager implementation libraray for PHP",
    "keywords": ["event", "event manager", "psr", "psr-14", "phossa", "phossa2"],
    "authors": [
        {
            "name": "Hong Zhang",
            "homepage": "https://github.com/phossa2"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "phossa2/shared": "^2.0.21"
    },
    "autoload": {
        "psr-4": { "Phossa2\\Event\\": "Event/" }
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "2.*"
    },
    "scripts": {
        "test": "phpunit",
        "check": "phpcs --standard=psr2 Event/",
        "format": "phpcbf --standard=psr2 Event/"
    },
    "provide": {
        "psr/event-manager-implementation": "^1.0"
    },
    "config": {
        "platform": {
            "php": "5.4.0"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.1-dev"
        }
    },
    "archive": {
        "exclude": [ "!vendor", "tests", "composer.lock" ]
    }
}
